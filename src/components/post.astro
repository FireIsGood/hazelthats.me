---
const { title, description, pubDate, href } = Astro.props;
const date = new Date(pubDate).toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
});
---

<div class="post">
    <div class="content">
        <div class="description">
            <a href={href}><h3>{title}</h3></a>
            <i>{date}</i>
            <p>{description}</p>
        </div>
    </div>
</div>

<style>
    .post {
        padding: 1rem;
    }

    .post h3 {
        margin: 0;
    }
</style>